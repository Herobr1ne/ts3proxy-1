<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

		<title>TS3 Proxy</title>

		<link rel="stylesheet" type="text/css" href="css/index.css">
	</head>
	
	<body>
		<nav>
			<div class="nav-brand">TS3 Proxy</div>
		</nav>

		<section id="generator">
			{% if error is defined %}
				<div class="error">
					{{ error }}
				</div>
			{% elseif proxy is defined %}
				<div class="proxy">
					Proxy address: <a href="ts3server://{{ proxy.ip }}?port={{ proxy.port }}"><b>{{ proxy.ip }}:{{ proxy.port }}</b></a>
				</div>
			{% endif %}

			<h3>Generate a TeamSpeak 3 Proxy</h3>
			<form action="/" method="post">
				<input type="text" name="ip" placeholder="IPv4(:port) / Domain(:port)" autofocus><br />
				<button class="generatebtn" type="submit">Generate</button>
			</form>
		</section>

		<footer>
			<!-- Please give the credits. -->
			<p>Copyright {{ "now"|date("Y") }} &copy; TS3Proxy | Created by <a target="_blank" href="https://unlimitedbytes.ovh">UnlimitedBytes</a>.</p>
		</footer>
	</body>
</html>